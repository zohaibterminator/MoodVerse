{
    "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
    "data-source": {
      "database-type": "mssql",
      "options": {
        "set-session-context": true
      },
      "connection-string": "@env('DATABASE_CONNECTION_STRING')"
    },
    "runtime": {
      "rest": {
        "enabled": true,
        "path": "/rest"
      },
      "graphql": {
        "allow-introspection": true,
        "enabled": true,
        "path": "/graphql"
      },
      "host": {
        "mode": "production",
        "cors": {
          "origins": ["https://kind-pond-095691c0f.5.azurestaticapps.net"],
          "allow-credentials": true
        },
        "authentication": {
          "provider": "StaticWebApps"
        }
      }
    },
    "entities": {
      "YourEntity": {
        "source": "dbo.User_Profile",
        "permissions": [
          {
            "actions": ["*"],
            "role": "anonymous"
          }
        ]
      }
    }
  }
  